<plugin xmlns="http://cordova.apache.org/ns/plugins/1.0"
    id="cordova-plugin-chrome-apps-audiocapture"
    version="1.0.5">
  <engines>
    <engine name="cordova" version=">=3.0.0" />
  </engines>

  <name>Chrome AudioCapture API</name>
  <keywords>chrome,audio,capture</keywords>
  <repo>https://github.com/MobileChromeApps/cordova-plugin-chrome-apps-audioCapture.git</repo>
  <issue>https://github.com/MobileChromeApps/cordova-plugin-chrome-apps-audioCapture/issues</issue>

  <platform name="android">
    <config-file target="AndroidManifest.xml" parent="/*">
      <uses-permission android:name="android.permission.RECORD_AUDIO" />
    </config-file>
    <config-file target="AndroidManifest.xml" parent="/*">
      <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    </config-file>
  </platform>
</plugin>
